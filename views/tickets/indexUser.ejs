<%- include('../partials/navbaruser.ejs') %>
<div class="container">
<div class="row mt-3 mb-3 justify-content-center">
  <h1 class="">Tickets Catalogue</h1>
</div>
<table class="table">
  <thead>
    <th>No</th>
    <th>Ticket</th>
    <th>Price</th> 
    <th>Date</th>
    <th>Options</th>
  </thead>
  <% products.forEach((ticket, index)=>{ %>
    <tr>
    <td><%= index+1 %></td>
    <td><%= ticket.name %></td>
    <td><%= ticket.price %></td>
    <td><%= formatDate(ticket.date) %></td>
    <td> <a href="/tickets/buy/<%= ticket.id %>" class="btn btn-success">Buy</a> </td>
  </tr>
  <% }) %>
</table>
</div>